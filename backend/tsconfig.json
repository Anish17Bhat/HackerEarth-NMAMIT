{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",        // Source files location
    "outDir": "./dist",        // Output directory for compiled JS
    
    // Environment Settings
    "module": "CommonJS",      // CommonJS module system for Node.js
    "target": "ES2020",        // Target modern JS compatible with Node.js
    "lib": ["ES2020"],         // Include ES2020 library features
    "types": ["node"],         // Include Node.js type definitions
    
    // Other Outputs
    "sourceMap": true,         // Generate sourcemaps for debugging
    "declaration": true,       // Generate declaration files (.d.ts)
    "declarationMap": true,    // Generate sourcemaps for declarations
    
    // Stricter Typechecking Options
    "strict": true,                    // Enable all strict type-checking options
    "noUncheckedIndexedAccess": true, // More precise checking for indexed accesses
    "exactOptionalPropertyTypes": true,
    
    // Module Resolution
    "esModuleInterop": true,           // Enable compatibility for ES import interoperability
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,     // Allow CommonJS style imports & exports
    
    // Other Recommended Options
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
